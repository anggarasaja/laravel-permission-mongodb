{
    "name": "anggarasaja/laravel-permission-mongodb",
    "description": "Permission handling for Laravel 5.2 and up using mongodb",
    "keywords": [
        "laravel",
        "security",
        "mongodb",
        "permission",
        "acl",
        "mostafamaklad",
        "maklad",
        "mostafa",
        "spatie",
        "jenssegers"
    ],
    "homepage": "https://github.com/anggarasaja/laravel-permission-mongodb",
    "license": "MIT",
    "authors": [
        {
            "name": "Harris Anggara",
            "email": "harrisanggara@gmail.com",
            "homepage": "https://github.com/anggarasaja",
            "role": "Developer"
        },
        {
            "name": "Mostafa Maklad",
            "email": "dev.mostafa.maklad@gmail.com",
            "homepage": "https://github.com/mostafamaklad",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "The original module"
        }
    ],
    "require": {
        "php": ">=5.6",
        "illuminate/auth": "^5.2.0",
        "illuminate/container": "^5.2.0",
        "illuminate/contracts": "^5.2.0",
        "jenssegers/mongodb": "^3.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.4.4",
        "monolog/monolog": "^1.23",
        "orchestra/testbench": "^3.2.0",
        "phpunit/phpunit": "^5.7|^6.0|^7.0",
        "squizlabs/php_codesniffer": "^3.1",
        "codacy/coverage": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Anggarasaja\\Permission\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anggarasaja\\Permission\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=psr2 src/",
        "fix-style": "phpcbf --standard=psr2 src/"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Anggarasaja\\Permission\\PermissionServiceProvider"
            ]
        }
    }
}
